---
const links = [
  { name: "Profil", href: "/#profil", icon: "01" },
  { name: "Parcours", href: "/#parcours", icon: "02" },
  { name: "Stack", href: "/#competences", icon: "03" },
  { name: "Projets", href: "/#projets", icon: "04" },
  { name: "Contact", href: "/#contact", icon: "05" },
];
---

<aside
  class="fixed top-0 left-0 h-screen w-64 bg-[#0a0f1c] border-r border-slate-800 hidden md:flex flex-col z-50 font-mono"
>
  <div class="p-8 border-b border-slate-800">
    <div
      class="text-2xl font-bold text-white tracking-tighter flex items-center gap-2"
    >
      <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
      Arthur KANDYBOWICZ<span class="text-cyan-400"></span>
    </div>
    <p class="text-[10px] text-slate-500 mt-2 uppercase tracking-widest">
      Architecte Green IT
    </p>
  </div>

  <nav class="flex-1 py-8 px-4">
    <ul class="space-y-2">
      {
        links.map((link) => (
          <li>
            <a
              href={link.href}
              class="flex items-center justify-between px-4 py-3 rounded border border-transparent hover:border-slate-700 hover:bg-[#111a2d] group transition-all duration-300"
            >
              <span class="text-slate-400 text-sm font-bold group-hover:text-white">
                {link.name}
              </span>
              <span class="text-xs text-slate-600 group-hover:text-cyan-400 font-mono">
                {link.icon}
              </span>
            </a>
          </li>
        ))
      }
    </ul>
  </nav>

  <div class="p-6 border-t border-slate-800">
    <div class="bg-[#111a2d] p-3 rounded border border-slate-700">
      <div class="flex justify-between text-[10px] text-slate-400 mb-1">
        <span>STATUS</span>
        <span class="text-green-400">ONLINE</span>
      </div>
      <div class="flex justify-between text-[10px] text-slate-400">
        <span>REGION</span>
        <span class="text-cyan-400">PACA</span>
      </div>
    </div>
  </div>
</aside>

<nav
  class="md:hidden fixed top-0 w-full bg-[#0a0f1c]/90 backdrop-blur-md z-50 border-b border-slate-800 p-4 flex justify-between items-center"
>
  <span class="font-mono text-xl font-bold text-white"
    >AK<span class="text-green-400">.sys</span></span
  >
  <a
    href="#contact"
    class="text-xs font-mono text-cyan-400 border border-cyan-400/30 px-3 py-1 rounded hover:bg-cyan-400/10"
    >MENU</a
  >
</nav>
