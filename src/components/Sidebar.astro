---
const links = [
  { name: "Profil", href: "#profil", icon: "01" },    
  { name: "Parcours", href: "#parcours", icon: "02" },  
  { name: "Comp√©tences", href: "#competences", icon: "03" },
  { name: "Projets", href: "#projets", icon: "04" },
  { name: "Contact", href: "#contact", icon: "05" },
];
---

<aside
  class="fixed top-0 left-0 h-screen w-64 bg-[#0a0f1c] border-r border-slate-800 hidden md:flex flex-col z-50 font-mono"
>
  <div class="p-8 border-b border-slate-800">
    <div class="text-xl font-bold text-white tracking-tighter flex items-center gap-3">
      <div class="w-2.5 h-2.5 bg-green-500 rounded-full animate-pulse shadow-[0_0_10px_rgba(34,197,94,0.5)]"></div>
      Arthur K.
    </div>
    <p class="text-[10px] text-slate-500 mt-2 uppercase tracking-widest pl-5 font-bold">
      Solutions Engineer
    </p>
  </div>

  <nav class="flex-1 py-8 px-4">
    <ul class="space-y-2">
      {
        links.map((link) => (
          <li>
            <a
              href={link.href}
              class="flex items-center justify-between px-4 py-3 rounded border border-transparent hover:border-slate-700 hover:bg-[#111a2d] group transition-all duration-300"
            >
              <span class="text-slate-400 text-sm font-bold group-hover:text-white transition-colors">
                {link.name}
              </span>
              <span class="text-[10px] text-slate-700 group-hover:text-cyan-400 font-mono">
                {link.icon}
              </span>
            </a>
          </li>
        ))
      }
    </ul>
  </nav>

  <div class="p-6 border-t border-slate-800">
    <div class="bg-[#111a2d] p-3 rounded border border-slate-700/50 shadow-inner">
      <div class="flex justify-between text-[10px] text-slate-400 mb-1">
        <span>STATUS</span>
        <span class="text-green-400 font-bold animate-pulse">ONLINE</span>
      </div>
      <div class="flex justify-between text-[10px] text-slate-400">
        <span>REGION</span>
        <span class="text-cyan-400 font-medium">Alpes-Maritimes</span>
      </div>
    </div>
  </div>
</aside>

<nav
  class="md:hidden fixed top-0 w-full bg-[#0a0f1c]/90 backdrop-blur-md z-50 border-b border-slate-800 p-4 flex justify-between items-center"
>
  <div class="flex items-center gap-2">
    <div class="w-2 h-2 bg-green-500 rounded-full"></div>
    <span class="font-mono text-sm font-bold text-white tracking-tight">Arthur K.</span>
  </div>
  
  <a
    href="#contact"
    class="text-[10px] font-mono font-bold text-cyan-400 border border-cyan-400/30 px-3 py-1.5 rounded uppercase tracking-wider bg-cyan-950/20 hover:bg-cyan-400/10 transition-colors"
  >
    Contact
  </a>
</nav>